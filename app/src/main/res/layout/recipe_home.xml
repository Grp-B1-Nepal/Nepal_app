<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".UI.Activity.RecipeHome_activity">

    <EditText
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:hint="@string/search_for_recipe"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searching_glass"
        app:layout_constraintTop_toBottomOf="@+id/recipe_choose_favorites" />

    <ImageView
        android:id="@+id/searching_glass"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
        android:contentDescription="@string/todo"
        android:src="@android:drawable/ic_menu_search"
        app:layout_constraintEnd_toStartOf="@+id/search_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipe_choose_today" />

    <Button
        android:id="@+id/recipe_choose_favorites"
        android:layout_width="112dp"
        android:layout_height="52dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorPrimary"
        android:text="favorites"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/recipe_choose_all"
        app:layout_constraintStart_toEndOf="@+id/recipe_choose_today"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recipe_choose_today"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="82dp"
        android:layout_height="51dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        android:text="today"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/recipe_choose_all"
        android:layout_width="93dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="24dp"
        android:background="@color/colorPrimary"
        android:text="all"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvrecipes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_text"
        android:layout_below="@id/search_text"/>

</androidx.constraintlayout.widget.ConstraintLayout>