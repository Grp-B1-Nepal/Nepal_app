<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".UI.Fragments.Progress.ProgressFragment">


    <ImageView
        android:id="@+id/speakerActivity2"
        android:layout_width="28dp"
        android:layout_height="31dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentProgress_InfoText"
        app:srcCompat="@drawable/speaker" />

    <ImageView
        android:id="@+id/fragmentProgress_imageView"
        android:layout_width="182dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/child_picture"
        app:layout_constraintBottom_toTopOf="@+id/fragmentProgress_Headline"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragmentProgress_Headline"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="Your 2 month old baby"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fragmentProgress_InfoText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragmentProgress_InfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Your baby is past the newborn phase, and you may be feeling more relaxed about caring for your darling. You and your partner are probably learning about your babyâ€™s likes and dislikes. While there is still a lot to learn, you may be starting to feel more confident in your parenting skills."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/buttonshape"
        app:layout_constraintBottom_toTopOf="@+id/fragmentProgress_Headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fragmentProgress_imageView">

        <TextView
            android:id="@+id/fragmentProgress_Weight"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:text="Weight"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="60dp"
            android:layout_height="19dp"

            android:text="4.12 - 8.29 kg"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentProgress_Weight" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="60dp"
            android:layout_height="19dp"
            android:text="60cm"

            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentProgress_Height" />

        <TextView
            android:id="@+id/fragmentProgress_Height"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:text="Height"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redDarkDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/redDarkDark"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="1"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="2"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="3"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="4"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="5"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="6"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="7"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="8"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="9"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b10"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="10"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="11"
                android:textColor="#F8FFFFFF" />

            <Button
                android:id="@+id/b12"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/scroll_buttons"
                android:text="12"
                android:textColor="#F8FFFFFF" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>